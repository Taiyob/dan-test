{
  "name": "express-backend-template",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development bun run --watch src/index.ts",
    "build": "NODE_ENV=production bun build src/index.ts --target node --outdir dist",
    "start": "NODE_ENV=production bun run dist/index.js",
    "test": "NODE_ENV=test bun test",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:seed": "bun run prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "setup": "bun install && bun run db:generate && bun run db:migrate",
    "reset": "bun run db:reset && bun run db:seed",
    "clean": "rm -rf dist node_modules .next",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/client-ses": "^3.887.0",
    "@prisma/client": "^6.19.0",
    "@types/json2csv": "^5.0.7",
    "@types/pdfkit": "^0.17.4",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "bun": "^1.3.3",
    "chalk": "^5.6.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "docker": "^1.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mailtrap": "^4.3.0",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "node-schedule": "^2.1.1",
    "pdfkit": "^0.17.2",
    "prisma": "^6.19.0",
    "resend": "^6.5.2",
    "slugify": "^1.6.6",
    "stripe": "^20.0.0",
    "twilio": "^5.10.7",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.4",
    "@types/bcrypt": "^6.0.0",
    "@types/bun": "latest",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/multer": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-schedule": "^2.1.8",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
